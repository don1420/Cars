	background-color: #181e2a
	min-height: 100vh
	.align_center
		margin-bottom: 80px
	h2
		margin-top: 67px
		margin-bottom: 70px
		text-align: center
		font-size: 32px
		font-family: "Proxima Nova Regular", sans-serif
		color: #b81d18
	span
		display: inline-block
		font-size: 15px
		text-align: center
		font-family: "Proxima Nova Light", sans-serif
		color: #fff
	span:before
		content: ''
		position: relative
		//float: left
		//margin-top: 50px
		margin-bottom: 40px
		display: block
		width: 157px
		height: 61px
		left: 50%
		margin-left: -78px
		//top: 120px
		bottom: 8px
		background-image: url("../img/rights.png")
		background-repeat: no-repeat
	.rights_icon1:before
		margin-bottom: 65px
	.rights_icon2:before
		background-position: 0 -60px
		height: 90px
	.rights_icon3:before
		background-position: 0 -150px
		height: 89px
	.rights_icon4:before
		background-position: 0 -240px
		height: 87px
	.rights_icon5:before
		background-position: 0 -327px
		height: 87px
	.rights_icon6:before
		background-position: 0 -414px
		height: 90px

.align_center
	text-align: center
	vertical-align: top